import java.util.ArrayList;

public class Client {
	public static String nom;
	public static Plat plat;
	public static double prixPlat;
	public static int nombrePlatPrit;
	public static ArrayList<Plat> listePlatCommande;
	
	public Client(String nom, String commande, ArrayList<Plat> listePlat) {
		Client client = new Client();
		String[] tabPrixPlat = commande.split(" ");
		System.out.println(tabPrixPlat[0] + " " + tabPrixPlat[1] + " " + tabPrixPlat[2]);
		client.setNom(nom);
		client.setNombrePlatPrit(Integer.parseInt(tabPrixPlat[2])); 
		Plat platChoisi = new Plat(tabPrixPlat[1]);
		
		for (int i = 0; i < listePlat.size(); i++) {
			if(listePlat.get(i).getTitrePlat().equals(tabPrixPlat[1]) ) {
				platChoisi.setPrixPlat((listePlat.get(i).prixPlat));
			}
		}
		
		Client.setPlat(platChoisi);
		
	}
	public Client() {
		
	}

	public String getNom() {
		return nom;
	}

	public static void setNom(String nom) {
		Client.nom = nom;
	}

	public Plat getPlat() {
		return plat;
	}

	public static void setPlat(Plat plat) {
		Client.plat = plat;
	}
	public double getPrixPlat() {
		return prixPlat;
	}

	public static void setPrixPlat(double prixPlat) {
		Client.prixPlat = prixPlat;
	}
	public double getNombrePlatPrit() {
		return nombrePlatPrit;
	}

	public static void setNombrePlatPrit(int nombrePlatPrit) {
		Client.nombrePlatPrit = nombrePlatPrit;
	}

	public static ArrayList<Plat> getListePlatCommande() {
		return listePlatCommande;
	}

	public static void setListePlatCommande(ArrayList<Plat> listePlatCommande) {
		Client.listePlatCommande = listePlatCommande;
	}
	
}

