
public class Client {
	public static String nom;
	public static double prix;
	
	public Client(String nom, String commande) {
		
		
		
		this.setNom(nom);
		this.setPrix(prix);
			
	}

	public String getNom() {
		return nom;
	}

	public static void setNom(String nom) {
		Client.nom = nom;
	}

	public static double getPrix() {
		return prix;
	}

	public static void setPrix(double prix) {
		Client.prix = prix;
	}
	
}

